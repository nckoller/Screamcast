    <div class="movie-list-title">
        <h1>{{#if spooky}} Spooky {{else}} Halloween {{/if}}Movies</h1>
    </div>
    <!--results page-->

    <ul>
        {{#each movies}}
        <li><a href="/moviedetailspage/{{dataValues.id}}">"{{dataValues.title}}" {{dataValues.year}}</a></li>
        {{/each}}


    </ul>

</body>

</html>