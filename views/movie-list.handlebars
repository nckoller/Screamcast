<!--results page-->
<!--IF they click spooky, THEN they will get this result-->
{{#if spooky}}
    {{> }}
    <button>Details</button>
{{#if}}
<!--IF they click halloween, THEN they will get this result-->
{{#if halloween}}
    {{> }}
     <button>Details</button>
{{#if}}
